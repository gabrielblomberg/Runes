{
    "version": "2.0.0",
    "tasks": [
		{
            "label": "Setup",
            "detail": "Setup a new development environment.",
            "type": "shell",
            "windows": {
                "command": "call scripts/windows/setup.bat"
            },
            "linux": {
                "command": "./scripts/linux/setup.bash"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile",
			"detail": "Compile the most recently configure build",
			"type": "shell",
			"windows": {
				"command": "call scripts/windows/compile.bat ${input:release_type}",
				"problemMatcher": "$msCompile"
			},
			"linux"  : {
				"command": "./scripts/linux/compile.bash",
                "problemMatcher": "$gcc"
			},
            "options": {
                "cwd": "${workspaceFolder}",
            },
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": true
			}
        },
        {
			"label": "Configure",
			"detail": "Generate build files.",
			"type": "shell",
			"windows": {
                "command": "call scripts/windows/configure.bat"
            },
			"linux"  : {
                "command": "./configure.bash"
            },
			"options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
		},
		{
            "label": "Clean",
            "detail": "Remove the build files and directory.",
            "type": "shell",
            "linux": {
                "command": "rm -rf ${workspaceFolder}/build "
            },
            "windows": {
                "command": "rd /S /Q build"
            },
            "problemMatcher": []
        },
        {
            "label": "Execute",
            "type": "shell",
            "windows": {
                "command": ".\\install\\runes.exe"
            },
			"linux"  : {
                "command": "./install/runes"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "release_type",
            "description": "Release of debug build?",
            "type": "pickString",
            "options": ["Debug", "Release"]
        }
    ]
}